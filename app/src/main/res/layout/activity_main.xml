<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainActvitiy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
  
  <FrameLayout
      android:id="@+id/basePayments"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/nextButton"/>
  
  <Button
      android:id="@+id/nextButton"
      android:layout_width="match_parent"
      android:layout_height="@dimen/main_height_button"
      android:layout_margin="@dimen/main_margin_button"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:textColor="@android:color/white"
      android:background="@color/colorPrimary"/>
  
  <ProgressBar
      android:id="@+id/progressIndicator"
      android:layout_width="@dimen/main_size_progress"
      android:layout_height="@dimen/main_size_progress"
      android:visibility="invisible"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
  
</android.support.constraint.ConstraintLayout>