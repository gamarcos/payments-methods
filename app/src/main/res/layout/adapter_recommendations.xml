<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="@dimen/recommendation_cardview_height"
      android:layout_margin="@dimen/recommendation_cardview_margin"
      app:cardElevation="@dimen/recommendation_cardview_elevation"
      app:cardCornerRadius="@dimen/recommendation_cardview_radius"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
    
    <LinearLayout
        android:layout_margin="@dimen/margin_content_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      
      <TextView
          android:id="@+id/amountTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_content_8"
          android:text="Valor Indicado:"/>
      
      <TextView
          android:id="@+id/amountIndicate"
          android:layout_marginTop="@dimen/margin_content_8"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      
    </LinearLayout>
    
  </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>