<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/white"
      android:orientation="vertical" >
    
    <!-- Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dialog_title_margin"
        android:layout_marginLeft="@dimen/dialog_title_margin"
        android:layout_marginRight="@dimen/dialog_title_margin"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_title_size" />
    
    <!-- Description -->
    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dialog_description_margin_top"
        android:layout_marginLeft="@dimen/dialog_title_margin"
        android:layout_marginRight="@dimen/dialog_title_margin"
        android:textSize="@dimen/dialog_description_size" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_dialog_height"
        android:layout_marginTop="@dimen/dialog_button_margin_top"
        android:orientation="horizontal">
      
      
      <Button
          android:id="@+id/dialog_button"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:textAllCaps="true"
          android:background="@color/colorPrimary"
          android:textColor="@android:color/white" />
    
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>